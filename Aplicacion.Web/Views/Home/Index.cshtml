@{
    ViewData["Title"] = "Inicio - Control de Asistencia FICA UJED";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Sistema de Control de Asistencia</h1>
        <p class="lead">Facultad de Ingeniería, Ciencias y Arquitectura - UJED</p>
        <hr class="my-4" />
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm p-4">
                <i class="bi bi-people-fill text-primary fs-1 mb-3"></i>
                <h4 class="text-primary fw-bold">Alumnos</h4>
                <h2>@ViewBag.TotalAlumnos</h2>
                <a href="@Url.Action("Index", "Alumnos")" class="btn btn-outline-primary mt-3">Ver lista</a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm p-4">
                <i class="bi bi-person-badge-fill text-success fs-1 mb-3"></i>
                <h4 class="text-success fw-bold">Docentes</h4>
                <h2>@ViewBag.TotalDocentes</h2>
                <a href="@Url.Action("Index", "Docentes")" class="btn btn-outline-success mt-3">Ver lista</a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm p-4">
                <i class="bi bi-calendar-check-fill text-warning fs-1 mb-3"></i>
                <h4 class="text-warning fw-bold">Asistencias</h4>
                <h2>@ViewBag.TotalAsistencias</h2>
                <a href="@Url.Action("Index", "Asistencias")" class="btn btn-outline-warning mt-3">Ver lista</a>
            </div>
        </div>
    
    </div>
</div>