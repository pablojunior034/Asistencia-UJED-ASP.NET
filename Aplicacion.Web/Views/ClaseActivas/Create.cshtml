@model Aplicacion.Web.Models.ClaseActiva

@{
    ViewData["Title"] = "Crear nueva clase";
}

<h2>Crear nueva clase</h2>

<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Materia" class="control-label">Materia</label>
        <input asp-for="Materia" class="form-control" placeholder="Ejemplo: Programación Web II" />
        <span asp-validation-for="Materia" class="text-danger"></span>
    </div>

    <!--<div class="form-group mt-3">
        <label asp-for="DocenteId" class="control-label">ID del docente</label>
        <input asp-for="DocenteId" class="form-control" placeholder="Ejemplo: DOC1234" />
        <span asp-validation-for="DocenteId" class="text-danger"></span>
    </div>-->

    <button type="submit" class="btn btn-primary mt-4">Crear clase y generar QR</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
